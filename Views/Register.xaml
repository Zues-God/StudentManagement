<Window x:Class="StudentManagement.Views.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentManagement.Views"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Register" Height="770" Width="800"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Grid MouseLeftButtonDown="Window_MouseLeftButtonDown">
        <Border CornerRadius="20" Margin="0">
            <Grid Background="#FFF2721E">
                <Button Content="✕"
                        Width="30" Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="#22FFFFFF"
                        Foreground="White"
                        FontSize="16"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CloseButton_Click"/>
                <Border Margin="80,60,80,90" CornerRadius="15" Background="#8692f8"/>
                <StackPanel Margin="80,60,80,90" VerticalAlignment="Center">
                    <!-- Ô màu giữa -->

                    <TextBlock Text="REGISTER" FontSize="36" Foreground="#FFEBEBEB" HorizontalAlignment="Center" Margin="0,25,0,25"/>
                    <StackPanel Margin="25,0,25,0">

                        <DockPanel>
                            <Label Content="Username:" FontSize="16" Width="140" Foreground="White"/>
                            <TextBox Text="{Binding Username}" x:Name="usernameTextBox" Height="40" Margin="0,0,0,8" Padding="8" FontSize="16"/>
                        </DockPanel>

                        <DockPanel>
                            <Label Content="Password:" FontSize="16" Width="140" Foreground="White"/>
                            <TextBox Text="{Binding Password}" x:Name="passwordBox" Height="40" Margin="0,0,0,8" Padding="8" FontSize="16"/>
                        </DockPanel>

                        <DockPanel>
                            <Label Content="Confirm Password:" FontSize="16" Width="140" Foreground="White"/>
                            <TextBox Text="{Binding ConfirmPassword}" x:Name="cPasswordBox" Height="40" Margin="0,0,0,8" Padding="8" FontSize="16"/>
                        </DockPanel>

                        <DockPanel>
                            <Label Content="Email:" FontSize="16" Width="140" Foreground="White"/>
                            <TextBox Text="{Binding Email}" x:Name="emailTextBox" Height="40" Margin="0,0,0,8" Padding="8" FontSize="16"/>
                        </DockPanel>

                        <DockPanel>
                            <Label Content="Full Name:" FontSize="16" Width="140" Foreground="White"/>
                            <TextBox Text="{Binding FullName}" x:Name="fullNameTextBox" Height="40" Margin="0,0,0,8" Padding="8" FontSize="16"/>
                        </DockPanel>

                        <DockPanel>
                            <Label Content="DOB:" FontSize="16" Width="140" Foreground="White"/>
                            <DatePicker x:Name="dobPicker"
    SelectedDate="{Binding DateOfBirth, UpdateSourceTrigger=PropertyChanged}"
    Height="55"
    Margin="0,0,0,8"
    FontSize="16"
    DisplayDateStart="1900-01-01"
    DisplayDateEnd="{x:Static sys:DateTime.Now}">
                                <DatePicker.Resources>
                                    <Style TargetType="DatePickerTextBox">
                                        <Setter Property="FontSize" Value="16"/>
                                        <Setter Property="Padding" Value="8"/>
                                        <Setter Property="IsReadOnly" Value="True"/>
                                        <Setter Property="Focusable" Value="False"/>
                                    </Style>
                                </DatePicker.Resources>
                            </DatePicker>
                        </DockPanel>

                        <DockPanel>
                            <Label Content="Role:" FontSize="16" Width="140" Foreground="White"/>
                            <ComboBox x:Name="roleComboBox"
                                Height="35"
                                FontSize="16"
                                Margin="0,0,0,9"
                                ItemsSource="{Binding Roles}"
                                SelectedItem="{Binding Role, UpdateSourceTrigger=PropertyChanged}"/>
                        </DockPanel>

                        <DockPanel>
                            <Label Content="Phone:" FontSize="16" Width="140" Foreground="White"/>
                            <TextBox Text="{Binding Phone}" x:Name="phoneTextBox" Height="40" Margin="0,0,0,8" Padding="8" FontSize="16"/>
                        </DockPanel>

                        <DockPanel>
                            <Label Content="Address:" FontSize="16" Width="140" Foreground="White"/>
                            <TextBox Text="{Binding Address}" x:Name="addressTextBox" Height="40" Margin="0,0,0,15" Padding="8" FontSize="16"/>
                        </DockPanel>

                        <Button Command="{Binding RegisterCommand}" Content="Register" Height="40" Background="#FF0C8D9D" Foreground="White" FontSize="16" IsDefault="True"/>
                    </StackPanel>
                </StackPanel>

                <!-- Điều hướng -->
                <DockPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,65">
                    <Label Content="Already have an account?" Foreground="White"/>
                    <Label Content=" Login." Foreground="LightBlue" Cursor="Hand" MouseDown="LoginLabel_Click"/>
                </DockPanel>
            </Grid>
        </Border>
    </Grid>
</Window>