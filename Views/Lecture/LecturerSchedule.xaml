<Window x:Class="StudentManagement.Views.Lecturer.LecturerSchedule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🎓 Lecturer Schedule"
        Width="1000" Height="650"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAFC">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!-- 🧾 Phần 1: Danh sách lớp học -->
        <Border Background="White" CornerRadius="10" Padding="15" BorderBrush="#CBD5E1" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="MY TEACHING SCHEDULE"
                           FontSize="22" FontWeight="Bold"
                           Foreground="#2563EB" HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <DataGrid x:Name="dgCourses"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          AlternatingRowBackground="#EFF6FF"
                          SelectionChanged="dgCourses_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Course ID" Binding="{Binding Id}" Width="100"/>
                        <DataGridTextColumn Header="Course Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Semester" Binding="{Binding Semester}" Width="120"/>
                        <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

        <!-- 🧩 Phần 2: Danh sách sinh viên -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="15"
                BorderBrush="#CBD5E1" BorderThickness="1" Margin="0,20,0,0">
            <StackPanel>
                <TextBlock Text="STUDENT ATTENDANCE"
                           FontSize="20" FontWeight="Bold"
                           Foreground="#0F172A"
                           Margin="0,0,0,10"/>

                <DataGrid x:Name="dgStudents"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          AlternatingRowBackground="#EFF6FF">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Student ID" Binding="{Binding UserId}" Width="120"/>
                        <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                        <DataGridCheckBoxColumn Header="Present" Binding="{Binding IsPresent}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Button Content="💾 Save Attendance"
                        Height="40" Width="200" HorizontalAlignment="Right"
                        Margin="0,15,0,0"
                        Background="#3B82F6" Foreground="White"
                        FontWeight="Bold" BorderThickness="0"
                        Click="BtnSaveAttendance_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
