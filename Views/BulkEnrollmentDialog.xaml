<Window x:Class="StudentManagement.Views.BulkEnrollmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Bulk Enrollment" Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        materialDesign:ShadowAssist.ShadowDepth="Depth3"
        Background="{DynamicResource MaterialDesignPaper}">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Bulk Enrollment"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,25"/>

        <ComboBox Grid.Row="1"
                  x:Name="CourseComboBox"
                  materialDesign:HintAssist.Hint="Select Course"
                  materialDesign:HintAssist.IsFloating="True"
                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                  FontSize="16"
                  DisplayMemberPath="Name"
                  Margin="0,0,0,20"/>

        <DataGrid Grid.Row="2"
                  x:Name="StudentsDataGrid"
                  AutoGenerateColumns="False"
                  SelectionMode="Extended"
                  Style="{StaticResource MaterialDesignDataGrid}"
                  materialDesign:DataGridAssist.CellPadding="13,8,8,8"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                  Margin="0,0,0,20">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="ENROLL SELECTED"
                    x:Name="SaveButton"
                    Click="SaveButton_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="150"
                    Height="40"
                    Margin="0,0,10,0"/>
            <Button Content="CANCEL"
                    Click="CancelButton_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Width="120"
                    Height="40"/>
        </StackPanel>
    </Grid>
</Window>

