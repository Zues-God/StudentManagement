<Window x:Class="StudentManagement.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Create Account" Height="700" Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        materialDesign:ShadowAssist.ShadowDepth="Depth3"
        Background="{DynamicResource MaterialDesignPaper}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" 
                                  Padding="40,30"
                                  Mode="PrimaryDark"
                                  VerticalAlignment="Top">
            <StackPanel>
                <materialDesign:PackIcon Kind="AccountPlus" 
                                         Width="56" 
                                         Height="56" 
                                         HorizontalAlignment="Center"
                                         Foreground="White"/>
                <TextBlock Text="Create New Account" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Foreground="White"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- Registration Form -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="40,30">
            <StackPanel>
                <materialDesign:Card Padding="20" 
                                     Margin="0,0,0,20"
                                     materialDesign:ShadowAssist.ShadowDepth="Depth1">
                    <StackPanel>
                        <TextBox materialDesign:HintAssist.Hint="Username" 
                                 materialDesign:HintAssist.IsFloating="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="16"
                                 Margin="0,0,0,15"/>

                        <TextBox materialDesign:HintAssist.Hint="Email" 
                                 materialDesign:HintAssist.IsFloating="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="16"
                                 Margin="0,0,0,15"/>

                        <TextBox materialDesign:HintAssist.Hint="Full Name (Optional)" 
                                 materialDesign:HintAssist.IsFloating="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="16"
                                 Margin="0,0,0,15"/>

                        <ComboBox materialDesign:HintAssist.Hint="Role"
                                  materialDesign:HintAssist.IsFloating="True"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  ItemsSource="{Binding Roles}"
                                  SelectedItem="{Binding SelectedRole}"
                                  FontSize="16"
                                  Margin="0,0,0,15"/>

                        <PasswordBox x:Name="PasswordBox"
                                     materialDesign:HintAssist.Hint="Password"
                                     materialDesign:HintAssist.IsFloating="True"
                                     Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                     FontSize="16"
                                     Margin="0,0,0,15"
                                     PasswordChanged="PasswordBox_PasswordChanged"/>

                        <PasswordBox x:Name="ConfirmPasswordBox"
                                     materialDesign:HintAssist.Hint="Confirm Password"
                                     materialDesign:HintAssist.IsFloating="True"
                                     Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                     FontSize="16"
                                     Margin="0,0,0,20"
                                     PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

                        <TextBlock Text="{Binding ErrorMessage}" 
                                   Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10"
                                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"
                                   FontSize="12"/>

                        <TextBlock Text="{Binding SuccessMessage}" 
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,15"
                                   Visibility="{Binding SuccessMessage, Converter={StaticResource StringToVisibilityConverter}}"
                                   FontSize="12"/>

                        <Button Content="REGISTER" 
                                Command="{Binding RegisterCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Height="45"
                                FontSize="16"
                                Margin="0,0,0,10"
                                IsDefault="True"/>

                        <TextBlock Text="Already have an account? " 
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   FontSize="14">
                            <Hyperlink Command="{Binding NavigateToLoginCommand}" 
                                       Foreground="{DynamicResource PrimaryHueMidBrush}">
                                Sign In
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
