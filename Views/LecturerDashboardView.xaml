<Window x:Class="StudentManagement.Views.LecturerDashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:StudentManagement.ViewModels"
        Title="Lecturer Dashboard" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{DynamicResource MaterialDesignPaper}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- AppBar -->
        <materialDesign:ColorZone Grid.Row="0" 
                                  Padding="20,15"
                                  Mode="PrimaryDark"
                                  VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AccountTie" 
                                             Width="32" 
                                             Height="32" 
                                             VerticalAlignment="Center"
                                             Foreground="White"
                                             Margin="0,0,15,0"/>
                    <TextBlock Text="Lecturer Dashboard" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"
                               Foreground="White"/>
                </StackPanel>
                <TextBox Grid.Column="1"
                         materialDesign:HintAssist.Hint="Search students or courses..."
                         materialDesign:HintAssist.IsFloating="False"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="14"
                         MaxWidth="400"
                         Margin="20,0"
                         HorizontalAlignment="Right">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <materialDesign:PackIcon Grid.Column="2"
                                         Kind="Magnify"
                                         Width="24"
                                         Height="24"
                                         VerticalAlignment="Center"
                                         Foreground="White"
                                         Margin="0,0,15,0"/>
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <Button Content="EXPORT"
                            Command="{Binding ExportGradesToExcelCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            FontSize="14"
                            Margin="0,0,10,0"/>
                    <Button Content="LOGOUT"
                            Command="{Binding LogoutCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            FontSize="14"/>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Main Content -->
        <TabControl Grid.Row="1" 
                    Margin="20"
                    Style="{StaticResource MaterialDesignFilledTabControl}">
            <TabItem Header="Manage Grades">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Students List -->
                    <materialDesign:Card Grid.Column="0" 
                                        Padding="15" 
                                        Margin="0,0,15,0"
                                        materialDesign:ShadowAssist.ShadowDepth="Depth1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" 
                                       Text="Students" 
                                       FontWeight="Bold" 
                                       FontSize="18"
                                       Margin="0,0,0,15"/>
                            <DataGrid Grid.Row="1" 
                                      ItemsSource="{Binding FilteredParticipants}" 
                                      SelectedItem="{Binding SelectedParticipant}"
                                      SelectionChanged="ParticipantsGrid_SelectionChanged"
                                      Style="{StaticResource MaterialDesignDataGrid}"
                                      materialDesign:DataGridAssist.CellPadding="13,8,8,8"
                                      materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Student" Binding="{Binding StudentName}" Width="*"/>
                                    <DataGridTextColumn Header="Course" Binding="{Binding CourseName}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Grades Section -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" 
                                    Orientation="Horizontal" 
                                    Margin="0,0,0,15">
                            <Button Content="PROJECT" 
                                    Command="{Binding ShowGradeDialogCommand}" 
                                    CommandParameter="project"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Margin="0,0,10,0"/>
                            <Button Content="MIDTERM" 
                                    Command="{Binding ShowGradeDialogCommand}" 
                                    CommandParameter="midterm"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Margin="0,0,10,0"/>
                            <Button Content="FINAL" 
                                    Command="{Binding ShowGradeDialogCommand}" 
                                    CommandParameter="final"
                                    Style="{StaticResource MaterialDesignRaisedButton}"/>
                        </StackPanel>
                        
                        <DataGrid Grid.Row="1" 
                                  ItemsSource="{Binding Grades}" 
                                  SelectedItem="{Binding SelectedGrade}"
                                  Style="{StaticResource MaterialDesignDataGrid}"
                                  materialDesign:DataGridAssist.CellPadding="13,8,8,8"
                                  materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                                  Margin="0,0,0,15">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Type" Binding="{Binding GradeType}" Width="120"/>
                                <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="100"/>
                                <DataGridTextColumn Header="Letter" Binding="{Binding LetterGrade}" Width="100"/>
                                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <materialDesign:Card Grid.Row="2" 
                                            Padding="15"
                                            materialDesign:ShadowAssist.ShadowDepth="Depth1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Value:" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,10,0"/>
                                <TextBox Grid.Column="1" 
                                         Text="{Binding GradeValueText, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         Margin="0,0,15,0"/>
                                <TextBlock Grid.Column="2" 
                                           Text="Letter:" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,10,0"/>
                                <TextBox Grid.Column="3" 
                                         Text="{Binding LetterGradeText, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         Margin="0,0,15,0"/>
                                <TextBlock Grid.Column="4" 
                                           Text="Notes:" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,10,0"/>
                                <TextBox Grid.Column="5" 
                                         Text="{Binding NotesText, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         Margin="0,0,15,0"/>
                                <Button Grid.Column="6" 
                                        Content="SAVE" 
                                        Command="{Binding SaveGradeCommand}" 
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        IsEnabled="{Binding SelectedGrade, Converter={StaticResource NullToBoolConverter}}"/>
                            </Grid>
                        </materialDesign:Card>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="My Courses &amp; Students">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:Card Grid.Column="0"
                                        Padding="15"
                                        Margin="0,0,15,0"
                                        materialDesign:ShadowAssist.ShadowDepth="Depth1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0"
                                       Text="My Courses"
                                       FontWeight="Bold"
                                       FontSize="18"
                                       Margin="0,0,0,15"/>
                            <DataGrid Grid.Row="1"
                                      ItemsSource="{Binding MyCourses}"
                                      SelectedItem="{Binding SelectedMyCourse}"
                                      AutoGenerateColumns="False"
                                      Style="{StaticResource MaterialDesignDataGrid}"
                                      materialDesign:DataGridAssist.CellPadding="13,8,8,8"
                                      materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="Auto"/>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </materialDesign:Card>
                    <materialDesign:Card Grid.Column="1"
                                        Padding="15"
                                        materialDesign:ShadowAssist.ShadowDepth="Depth1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0"
                                       Text="Enrolled Students"
                                       FontWeight="Bold"
                                       FontSize="18"
                                       Margin="0,0,0,15"/>
                            <DataGrid Grid.Row="1"
                                      ItemsSource="{Binding CourseStudents}"
                                      AutoGenerateColumns="False"
                                      Style="{StaticResource MaterialDesignDataGrid}"
                                      materialDesign:DataGridAssist.CellPadding="13,8,8,8"
                                      materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Student Name" Binding="{Binding StudentName}" Width="*"/>
                                    <DataGridTextColumn Header="Email" Binding="{Binding StudentEmail}" Width="*"/>
                                    <DataGridTextColumn Header="Enrolled At" Binding="{Binding EnrolledAt, StringFormat='{}{0:yyyy-MM-dd}'}" Width="Auto"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </materialDesign:Card>
                </Grid>
            </TabItem>

            <TabItem Header="My Schedules">
                <DataGrid ItemsSource="{Binding Schedules}"
                          Style="{StaticResource MaterialDesignDataGrid}"
                          materialDesign:DataGridAssist.CellPadding="13,8,8,8"
                          materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                          Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Course" Binding="{Binding CourseName}" Width="*"/>
                        <DataGridTextColumn Header="Day" Binding="{Binding DayOfWeek}" Width="120"/>
                        <DataGridTextColumn Header="Slot" Binding="{Binding SlotName}" Width="120"/>
                        <DataGridTextColumn Header="Room" Binding="{Binding Room}" Width="120"/>
                        <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <materialDesign:Snackbar Grid.Row="2" 
                                 MessageQueue="{materialDesign:MessageQueue}"
                                 x:Name="StatusSnackbar"/>
    </Grid>
</Window>
