<Window x:Class="StudentManagement.Views.CourseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Course" Height="600" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        materialDesign:ShadowAssist.ShadowDepth="Depth3"
        Background="{DynamicResource MaterialDesignPaper}">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Course Information" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,25"/>

        <TextBox Grid.Row="1" 
                 x:Name="CodeTextBox" 
                 materialDesign:HintAssist.Hint="Course Code"
                 materialDesign:HintAssist.IsFloating="True"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 FontSize="16"
                 Margin="0,0,0,20"/>

        <TextBox Grid.Row="2" 
                 x:Name="NameTextBox" 
                 materialDesign:HintAssist.Hint="Course Name"
                 materialDesign:HintAssist.IsFloating="True"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 FontSize="16"
                 Margin="0,0,0,20"/>

        <TextBox Grid.Row="3" 
                 x:Name="DescriptionTextBox" 
                 materialDesign:HintAssist.Hint="Description (Optional)"
                 materialDesign:HintAssist.IsFloating="True"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 FontSize="16"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 MinHeight="80"
                 Margin="0,0,0,20"/>

        <TextBox Grid.Row="4" 
                 x:Name="CreditsTextBox" 
                 materialDesign:HintAssist.Hint="Credits"
                 materialDesign:HintAssist.IsFloating="True"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 FontSize="16"
                 Margin="0,0,0,20"/>

        <ComboBox Grid.Row="5" 
                  x:Name="InstructorComboBox" 
                  materialDesign:HintAssist.Hint="Select Instructor (Optional)"
                  materialDesign:HintAssist.IsFloating="True"
                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                  FontSize="16"
                  DisplayMemberPath="FullName"
                  Margin="0,0,0,20"/>

        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="SAVE" 
                    x:Name="SaveButton" 
                    Click="SaveButton_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="120" 
                    Height="40"
                    Margin="0,0,10,0"/>
            <Button Content="CANCEL" 
                    Click="CancelButton_Click" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Width="120" 
                    Height="40"/>
        </StackPanel>
    </Grid>
</Window>
