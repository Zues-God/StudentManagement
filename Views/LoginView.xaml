<Window x:Class="StudentManagement.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Student Management System" Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        materialDesign:ShadowAssist.ShadowDepth="Depth3"
        Background="{DynamicResource MaterialDesignPaper}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" 
                                  Padding="40,30"
                                  Mode="PrimaryDark"
                                  VerticalAlignment="Top">
            <StackPanel>
                <materialDesign:PackIcon Kind="School" 
                                         Width="64" 
                                         Height="64" 
                                         HorizontalAlignment="Center"
                                         Foreground="White"/>
                <TextBlock Text="Student Management" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Foreground="White"
                           Margin="0,10,0,0"/>
                <TextBlock Text="Sign in to continue" 
                           FontSize="14" 
                           HorizontalAlignment="Center"
                           Foreground="White"
                           Opacity="0.8"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- Login Form -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="40,30">
            <StackPanel>
                <materialDesign:Card Padding="20" 
                                     Margin="0,0,0,20"
                                     materialDesign:ShadowAssist.ShadowDepth="Depth1">
                    <StackPanel>
                        <TextBox materialDesign:HintAssist.Hint="Username" 
                                 materialDesign:HintAssist.IsFloating="True"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="16"
                                 Margin="0,0,0,15"
                                 materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"/>

                        <PasswordBox x:Name="PasswordBox"
                                     materialDesign:HintAssist.Hint="Password"
                                     materialDesign:HintAssist.IsFloating="True"
                                     Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                     FontSize="16"
                                     Margin="0,0,0,20"
                                     PasswordChanged="PasswordBox_PasswordChanged"/>

                        <TextBlock Text="{Binding ErrorMessage}" 
                                   Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,15"
                                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"
                                   FontSize="12"/>

                        <Button Content="LOGIN" 
                                Command="{Binding LoginCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Height="45"
                                FontSize="16"
                                Margin="0,0,0,10"
                                IsDefault="True"/>

                        <TextBlock Text="Don't have an account? " 
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   FontSize="14">
                            <Hyperlink Command="{Binding NavigateToRegisterCommand}" 
                                       Foreground="{DynamicResource PrimaryHueMidBrush}">
                                Create Account
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
