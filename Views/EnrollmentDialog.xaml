<Window x:Class="StudentManagement.Views.EnrollmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Enrollment" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        materialDesign:ShadowAssist.ShadowDepth="Depth3"
        Background="{DynamicResource MaterialDesignPaper}">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="New Enrollment" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,25"/>

        <ComboBox Grid.Row="1" 
                  x:Name="CourseComboBox" 
                  materialDesign:HintAssist.Hint="Select Course"
                  materialDesign:HintAssist.IsFloating="True"
                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                  FontSize="16"
                  DisplayMemberPath="Name"
                  Margin="0,0,0,20"/>

        <ComboBox Grid.Row="2" 
                  x:Name="UserComboBox" 
                  materialDesign:HintAssist.Hint="Select Student"
                  materialDesign:HintAssist.IsFloating="True"
                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                  FontSize="16"
                  DisplayMemberPath="FullName"
                  Margin="0,0,0,20"/>

        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="SAVE" 
                    x:Name="SaveButton" 
                    Click="SaveButton_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="120" 
                    Height="40"
                    Margin="0,0,10,0"/>
            <Button Content="CANCEL" 
                    Click="CancelButton_Click" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Width="120" 
                    Height="40"/>
        </StackPanel>
    </Grid>
</Window>
