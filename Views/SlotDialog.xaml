<Window x:Class="StudentManagement.Views.SlotDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Time Slot" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        materialDesign:ShadowAssist.ShadowDepth="Depth3"
        Background="{DynamicResource MaterialDesignPaper}">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Time Slot Information"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,25"/>

        <TextBox Grid.Row="1"
                 x:Name="NameTextBox"
                 materialDesign:HintAssist.Hint="Slot Name"
                 materialDesign:HintAssist.IsFloating="True"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 FontSize="16"
                 Margin="0,0,0,20"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Start Time:"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"
                       FontSize="14"/>
            <ComboBox x:Name="StartHourComboBox"
                      Width="80"
                      Margin="0,0,5,0">
                <ComboBoxItem Content="07"/>
                <ComboBoxItem Content="08"/>
                <ComboBoxItem Content="09"/>
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="11"/>
                <ComboBoxItem Content="12"/>
                <ComboBoxItem Content="13"/>
                <ComboBoxItem Content="14"/>
                <ComboBoxItem Content="15"/>
                <ComboBoxItem Content="16"/>
            </ComboBox>
            <TextBlock Text=":"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>
            <ComboBox x:Name="StartMinuteComboBox"
                      Width="80"
                      Margin="0,0,10,0">
                <ComboBoxItem Content="00"/>
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="20"/>
                <ComboBoxItem Content="30"/>
                <ComboBoxItem Content="40"/>
                <ComboBoxItem Content="50"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="End Time:"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"
                       FontSize="14"/>
            <ComboBox x:Name="EndHourComboBox"
                      Width="80"
                      Margin="0,0,5,0">
                <ComboBoxItem Content="07"/>
                <ComboBoxItem Content="08"/>
                <ComboBoxItem Content="09"/>
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="11"/>
                <ComboBoxItem Content="12"/>
                <ComboBoxItem Content="13"/>
                <ComboBoxItem Content="14"/>
                <ComboBoxItem Content="15"/>
                <ComboBoxItem Content="16"/>
            </ComboBox>
            <TextBlock Text=":"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>
            <ComboBox x:Name="EndMinuteComboBox"
                      Width="80">
                <ComboBoxItem Content="00"/>
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="20"/>
                <ComboBoxItem Content="30"/>
                <ComboBoxItem Content="40"/>
                <ComboBoxItem Content="50"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="SAVE"
                    x:Name="SaveButton"
                    Click="SaveButton_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="120"
                    Height="40"
                    Margin="0,0,10,0"/>
            <Button Content="CANCEL"
                    Click="CancelButton_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Width="120"
                    Height="40"/>
        </StackPanel>
    </Grid>
</Window>

