<Page x:Class="StudentManagement.Views.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentManagement.Views"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="390" d:DesignWidth="800"
      Title="ProfilePage">

    <Grid Background="#FFF2721E">
        <Border CornerRadius="15" Background="White" Margin="10,10,10,10" Padding="10">
            <StackPanel>
                <TextBlock Text="User Profile" FontSize="24" Foreground="#FFF2721E"
                       FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <DockPanel>
                    <Label Content="Username:" Width="100" FontWeight="Bold"/>
                    <TextBox Text="{Binding User.Username}" x:Name="usernameTextBox" Height="25" FontSize="14"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="Current Password:" Width="100" FontWeight="Bold"/>
                    <TextBox Text="{Binding CurPassword}" x:Name="currentPassTextBox" Height="25" FontSize="14"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="New Password:" Width="100" FontWeight="Bold"/>
                    <TextBox Text="{Binding NewPassword}" x:Name="newPassTextBox" Height="25" FontSize="14"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="Email:" Width="100" FontWeight="Bold"/>
                    <TextBox Text="{Binding User.Email}" x:Name="emailTextBox" Height="25" FontSize="14"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="Full Name:" Width="100" FontWeight="Bold"/>
                    <TextBox Text="{Binding User.FullName}" x:Name="fullNameTextBox" Height="25" FontSize="14"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="DOB:" Width="100" FontWeight="Bold"/>
                    <DatePicker x:Name="dobPicker"
    SelectedDate="{Binding DateOfBirth, Mode=TwoWay,StringFormat=yyyy-MM-dd, UpdateSourceTrigger=PropertyChanged}"
    Height="25"
    Margin="0,0,0,0"
    FontSize="16"
    DisplayDateStart="1900-01-01"
    DisplayDateEnd="{x:Static sys:DateTime.Now}">
                        <DatePicker.Resources>
                            <!-- Tùy chỉnh lại ô nhập text của DatePicker -->
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Height" Value="25"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="4,0,0,0"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>
                </DockPanel>

                <DockPanel>
                    <Label Content="Phone:" Width="100" FontWeight="Bold"/>
                    <TextBox Text="{Binding User.Phone}" x:Name="phoneTextBox" Height="25" FontSize="14"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="Address:" Width="100" FontWeight="Bold"/>
                    <TextBox Text="{Binding User.Address}" x:Name="addressTextBox" Height="25" FontSize="14"/>
                </DockPanel>
                <StackPanel>
                    <Button Command="{Binding UpdateProfileCommand}" Content="Update" FontSize="14" Margin="0,10,0,0" Height="25" HorizontalAlignment="Center" Width="70" BorderBrush="#00000000" Foreground="White" Background="#FFF2721E"/>
                </StackPanel>
                    

            </StackPanel>
        </Border>
    </Grid>
</Page>
