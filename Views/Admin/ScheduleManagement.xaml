<Window x:Class="StudentManagement.Views.Admin.ScheduleManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="📅 Schedule Management"
        Width="1000" Height="650"
        WindowStartupLocation="CenterScreen"
        Background="#F1F5F9">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- 🧾 Phần trên: danh sách -->
        <Border Background="White" CornerRadius="10" Padding="15"
                BorderBrush="#CBD5E1" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="SCHEDULE LIST"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#2563EB"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <DataGrid x:Name="dgSchedules"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            AlternatingRowBackground="#EFF6FF"
                            RowHeaderWidth="0"
                            SelectionMode="Single"
                            BorderThickness="0"
                            HeadersVisibility="Column"
                            GridLinesVisibility="None"
                            SelectionChanged="dgSchedules_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Course" Binding="{Binding Course}" Width="*"/>
                        <DataGridTextColumn Header="Day" Binding="{Binding DayOfWeek}" Width="120"/>
                        <DataGridTextColumn Header="Slot" Binding="{Binding Slot}" Width="160"/>
                        <DataGridTextColumn Header="Room" Binding="{Binding Room}" Width="120"/>
                        <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="200"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

        <!-- 🧩 Phần dưới: Form + Buttons -->
        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>

            <!-- BÊN TRÁI: Form nhập -->
            <Border Background="White" CornerRadius="10" Padding="10"
                    BorderBrush="#CBD5E1" BorderThickness="1" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="SCHEDULE DETAILS"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#0F172A"
                               Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Course:" Width="120" VerticalAlignment="Center"/>
                        <ComboBox x:Name="cbCourse"
                                  Width="200"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Id"
                                  SelectedIndex="0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Day of Week:" Width="120" VerticalAlignment="Center"/>
                        <ComboBox x:Name="cbDayOfWeek" Width="200">
                            <ComboBoxItem Content="Monday"/>
                            <ComboBoxItem Content="Tuesday"/>
                            <ComboBoxItem Content="Wednesday"/>
                            <ComboBoxItem Content="Thursday"/>
                            <ComboBoxItem Content="Friday"/>
                            <ComboBoxItem Content="Saturday"/>
                           
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Slot:" Width="120" VerticalAlignment="Center"/>
                        <ComboBox x:Name="cbSlot"
                                  Width="200"
                                  DisplayMemberPath="SlotDisplay"
                                  SelectedValuePath="Id"
                                  SelectedIndex="0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Room:" Width="120" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtRoom" Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Notes:" Width="120" VerticalAlignment="Top"/>
                        <TextBox x:Name="txtNotes" Width="200" Height="20" TextWrapping="Wrap" AcceptsReturn="True" TextChanged="txtNotes_TextChanged"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- BÊN PHẢI: Các nút thao tác -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="5" 
                    Padding="10"
                    BorderBrush="#CBD5E1" 
                    BorderThickness="1">
                <StackPanel VerticalAlignment="Center">
                    <Button Content="➕ Add" 
                            Height="45" 
                            Margin="0,8"
                            Background="#22C55E" 
                            Foreground="White" 
                            FontWeight="Bold"
                            BorderThickness="0" 
                            Click="BtnAdd_Click"/>

                    <Button Content="✏️ Edit" 
                            Height="45" 
                            Margin="0,8"
                            Background="#3B82F6" 
                            Foreground="White" 
                            FontWeight="Bold"
                            BorderThickness="0" 
                            Click="BtnEdit_Click"/>

                    <Button Content="🗑️ Delete" 
                            Height="45" 
                            Margin="0,8"
                            Background="#EF4444" 
                            Foreground="White" 
                            FontWeight="Bold"
                            BorderThickness="0" 
                            Click="BtnDelete_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
