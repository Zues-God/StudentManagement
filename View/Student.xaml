<Page x:Class="schoolManagerUser1.View.Student"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:schoolManagerUser1.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Student">

    <Grid Background="AntiqueWhite">
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" VerticalAlignment="Top"  Background="#f2721e" Height="45">
            <MenuItem HorizontalAlignment="Center" Header="🏠" Click="MenuItem_Home_Click" Height="20" Margin="5,15,5,5" Background="White"/>
            <MenuItem HorizontalAlignment="Center" Header="Profile" Click="MenuItem_Profile_Click" Height="20" Margin="5,15,5,5" Background="White"/>
            <MenuItem HorizontalAlignment="Center" Header="Logout" Click="MenuItem_Logout_Click" Height="20" Margin="5,15,5,5" Background="White"/>
        </Menu>
        <Label Content="{Binding Text}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" Background="#FFF1D9D9" Grid.Row="1"/>
        <Frame x:Name="MenuFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
