<Page x:Class="StudentManagement.View.AdminFeature.UserManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentManagement.View.AdminFeature"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserManagement"
      KeyDown="EnterPressed"
      >

    <Grid Background="#f2721e">
        <StackPanel Orientation="Horizontal">
            <Label Content="Enter Username to search:" HorizontalAlignment="Left" Margin="50,87,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White" Height="28" Width="195"/>
            <TextBox x:Name="SearchBox" Width="200" Margin="0,87,0,334"/>
            <Button Content="Add User" Width="100" Height="30"
                    Background="Green" Foreground="White"
                    Click="AddUser_Click" Margin="0,87,0,334"/>
        </StackPanel>
        <ListView ItemsSource="{Binding Users}" Margin="50,121,50,49">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Username" DisplayMemberBinding="{Binding Username}"/>
                    <GridViewColumn Header="Password" DisplayMemberBinding="{Binding Password}"/>
                    <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}"/>
                    <GridViewColumn Header="Full Name" DisplayMemberBinding="{Binding FullName}"/>
                    <GridViewColumn Header="DOB" DisplayMemberBinding="{Binding DateOfBirth}"/>
                    <GridViewColumn Header="Phone" DisplayMemberBinding="{Binding Phone}"/>
                    <GridViewColumn Header="Address" DisplayMemberBinding="{Binding Address}"/>
                    <GridViewColumn Header="Role" DisplayMemberBinding="{Binding Role}"/>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding IsActive}"/>
                    <GridViewColumn Header="Created At" DisplayMemberBinding="{Binding CreatedAt}"/>
                    <GridViewColumn Header="Updated At" DisplayMemberBinding="{Binding UpdatedAt}"/>
                    <GridViewColumn Header="Actions">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete" Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding id}" Background="Red" Foreground="White"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Page>

