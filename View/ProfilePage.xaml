<Page x:Class="schoolManagerUser1.View.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="ProfilePage">

    <Grid Background="#FFF2721E">
        <Border CornerRadius="15" Background="White" Margin="50" Padding="20">
            <StackPanel>
                <TextBlock Text="User Profile" FontSize="26" Foreground="#FFF2721E"
                           FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <DockPanel>
                    <Label Content="Username:" Width="100" FontWeight="Bold"/>
                    <TextBox x:Name="usernameTextBox" Height="30"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="Old Password:" Width="100" FontWeight="Bold"/>
                    <TextBox x:Name="oldPassTextBox" Height="30"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="New Password:" Width="100" FontWeight="Bold"/>
                    <TextBox x:Name="newPassTextBox" Height="30"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="Email:" Width="100" FontWeight="Bold"/>
                    <TextBox x:Name="emailTextBox" Height="30"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="Full Name:" Width="100" FontWeight="Bold"/>
                    <TextBox x:Name="fullNameTextBox" Height="30"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="DOB:" Width="100" FontWeight="Bold"/>
                    <TextBox x:Name="DOBTextBox" Height="30"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="Phone:" Width="100" FontWeight="Bold"/>
                    <TextBox x:Name="phoneTextBox" Height="30"/>
                </DockPanel>

                <DockPanel>
                    <Label Content="Address:" Width="100" FontWeight="Bold"/>
                    <TextBox x:Name="addressTextBox" Height="30"/>
                </DockPanel>

                <Button Content="Save Changes" Background="#FFF2721E" Foreground="White"
                        FontSize="16" Margin="0,20,0,0" Height="40"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
